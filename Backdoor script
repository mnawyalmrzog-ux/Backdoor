MainScanBtn.Text = "START DEEP SCAN"
MainScanBtn.BackgroundColor3 = Color3.fromRGB(0, 80, 200)
MainScanBtn.TextColor3 = Color3.white
MainScanBtn.MouseButton1Click:Connect(findRemotes)

ExecBtn.MouseButton1Click:Connect(function()
    if selectedRemote then
        if selectedRemote:IsA("RemoteEvent") then selectedRemote:FireServer(CodeBox.Text)
        else selectedRemote:InvokeServer(CodeBox.Text) end
    end
end)
