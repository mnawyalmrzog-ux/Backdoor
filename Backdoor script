-- === ÙˆØ¸Ø§Ø¦Ù Ø§Ù„Ø¨Ø­Ø« ÙˆØ§Ù„Ø§Ø®ØªØ±Ø§Ù‚ ===
local selectedRemote = nil

ScanBtn.MouseButton1Click:Connect(function()
    for _, v in pairs(game:GetDescendants()) do
        if v:IsA("RemoteEvent") or v:IsA("RemoteFunction") then
            local b = Instance.new("TextButton", ScannerPage)
            b.Size = UDim2.new(1, 0, 0, 40)
            b.Text = "Ø§Ù„Ø«ØºØ±Ø©: " .. v.Name
            b.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
            b.TextColor3 = Color3.white
            b.MouseButton1Click:Connect(function()
                selectedRemote = v
                HackPanel.Visible = true
                ScannerPage.Visible = false
                ScanBtn.Visible = false
                Title.Text = "TARGET: " .. v.Name
            end)
        end
    end
end)

ExecBtn.MouseButton1Click:Connect(function()
    if selectedRemote and CodeBox.Text ~= "" then
        if selectedRemote:IsA("RemoteEvent") then
            selectedRemote:FireServer(CodeBox.Text)
        else
            selectedRemote:InvokeServer(CodeBox.Text)
        end
    end
end)

