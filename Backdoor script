-- === Ø§Ù„Ù…Ù†Ø·Ù‚ Ø§Ù„Ø¨Ø±Ù…Ø¬ÙŠ ===
local selectedRemote = nil
local function send(code)
    if selectedRemote then
        if selectedRemote:IsA("RemoteEvent") then selectedRemote:FireServer(code)
        else selectedRemote:InvokeServer(code) end
    end
end

ScanBtn.MouseButton1Click:Connect(function()
    for _, v in pairs(LeftSide:GetChildren()) do if v:IsA("TextButton") then v:Destroy() end end
    for _, v in pairs(game:GetDescendants()) do
        if v:IsA("RemoteEvent") or v:IsA("RemoteFunction") then
            local n = v.Name:lower()
            if n:find("backdoor") or n:find("admin") or n:find("remote") or n:find("control") then
                local b = Instance.new("TextButton", LeftSide)
                b.Size = UDim2.new(1, 0, 0, 30)
                b.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
                b.Text = "Found: " .. v.Name
                b.TextColor3 = Color3.yellow
                b.TextSize = 10
                Instance.new("UICorner", b)
                b.MouseButton1Click:Connect(function()
                    selectedRemote = v
                    Title.Text = "Target Locked: " .. v.Name
                    send("require(110047253067635):Hload('"..LocalPlayer.Name.."')")
                end)
            end
        end
    end
end)

ExecBtn.MouseButton1Click:Connect(function() send(CodeBox.Text) end)

-- Ù…ÙŠØ²Ø© Ø§Ù„ØªØµØºÙŠØ±
local isMini = false
MiniBtn.MouseButton1Click:Connect(function()
    isMini = not isMini
    if isMini then
        MainFrame:TweenSize(UDim2.new(0, 500, 0, 40), "Out", "Quad", 0.3, true)
        LeftSide.Visible, RightSide.Visible, ScanBtn.Visible = false, false, false
    else
        MainFrame:TweenSize(UDim2.new(0, 500, 0, 300), "Out", "Quad", 0.3, true)
        LeftSide.Visible, RightSide.Visible, ScanBtn.Visible = true, true, true
    end
end)
